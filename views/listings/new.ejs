<% layout("/layouts/boilerplate.ejs") %>
    <div class="row mt-3">
    <div class="col-8 offset-2" >
        <br><br>
        <h3>StayNest</h3>
    <form action="/listing" method="post">
        <h3></h3>
        <div class="mb-3">
            <label for="title" class="form-label">Title</label><br>
            <input type="text" class="form-control" name="listing[title]" required>
        </div>

        <br>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label><br>
            <textarea id="description" class="form-control" name="listing[description]" rows="4"></textarea>
        </div>

        <br>

        <div class="mb-3">
            <label for="image" class="form-label">Image URL</label>
            <input
                type="url"
                class="form-control"
                name="listing[image][url]"
                placeholder="https://example.com/image.jpg">
        </div>

        <br>
        <div class="row">
            <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label><br>
            <input type="number"class="form-control"  name="listing[price]" min="0">
        </div>

        <br>

        <div class="mb-3 col-md-4">
            <label for="location" class="form-label">Location</label><br>
            <input type="text" class="form-control"  name="listing[location]">
        </div>
        </div>
        
        <br>
        <div class="mb-3">
            <label for="country" class="form-label">Country</label><br>
            <input type="text" class="form-control" name="listing[country]">
        </div>

        <br>

        <button type="submit" class="btn btn-dark add-btn mb-3">Create Listing</button>
    </form>
    <br><br>
    </div>
</div>