<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3s">
<div class="col-8 offset-2" >
    <br><br>
 <h3>StayNest</h3>
    <form method="post" action="/listing/<%= listing._id %>?_method=PUT">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
           <br>
            <input type="text" id="title" name="listing[title]" class="form-control" value="<%= listing.title %>" required>
        </div>

        <br>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label><br>
            <textarea id="description" name="listing[description]" class="form-control" rows="4"><%= listing.description%></textarea>
        </div>

        <br>

        <div class="mb-3">
            <label for="image" class="form-label">Image URL</label><br>
            <input type="url"  name="listing[image][url]" 
            value="<%= listing.image.url %>" class="form-control"  placeholder="https://example.com/image.jpg">
        </div>

        <br>
        <div class="row">
            <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label><br>
            <input type="number"value="<%= listing.price%>" class="form-control"  name="listing[price]" min="0">
            </div>

        <br>

            <div class="mb-3 col-md-4">
            <label for="location" class="form-label">Location</label><br>
            <input type="text" value="<%= listing.location%>" class="form-control" name="listing[location]">
            </div>
        </div>
        
        <br>
        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
           <br>
            <input type="text"value="<%= listing.country%>" class="form-control" name="listing[country]">
        </div>

        <br>

        <button type="submit" class="btn btn-dark edit-btn mb-3">Edit</button>
    </form>
    <br><br>
</div>
</div>
