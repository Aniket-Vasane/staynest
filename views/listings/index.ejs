<% layout("/layouts/boilerplate.ejs") %>

<h1>Listing page</h1>
<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
  <% for (let listing of allListing) { %>
    <a href="/listing/<%= listing._id %>" class="listing-links">
      <div class="card col" style="margin-bottom: 1rem;">
        <img src="<%= listing.image.url %>" class="card-img-top" alt="Listing Image" style="height: 20rem;">
        <div class="card-img-overlay"> <%= listing.title %> </div>
          <div class="card-body">
            <p class="card-title">
              <b><%= listing.title %>  </b><br/>
            &#x20B9;<%= listing.price.toLocaleString('en-IN') %>/night</p>
          </div>
        </div>
    </a>
  <% } %>
</div>


